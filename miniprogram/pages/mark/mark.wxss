.title {
  font-size:48rpx;
  margin-left:10rpx;
  font-weight:bold;
}
.error-tips {
  font-size:28rpx;
  color:rgb(226, 78, 78);
  min-height:40rpx;
  padding:30rpx 10rpx;
}
.label {
  color: #333;
  font-size: 30rpx;
  margin-left:10rpx;
}
.btn-save {
  width:auto;
  line-height:64rpx;
  background:rgb(255, 232, 59);
  border-radius:31rpx;
  color:#000;
  float:right;
  padding: 0 30rpx;
}
.invisible-btn {
  opacity: 0;
  height:90rpx;
  position:absolute;
  width:100%;
  top:38rpx;
  z-index: 2;
}
/* 类别弹窗 */
.list-item {
  padding:13rpx;
  border-bottom:1rpx solid #eee;
  text-align:center;
  font-size:40rpx;

}
.list-item-cancel {
  padding:26rpx 0 13rpx;
  text-align:center;
  font-size:40rpx;
  color: #999;
}
.one-input {
  margin-top: 10rpx;
}
.input-icon {
  width:35rpx;
  height:35rpx;
  position:relative;
  top:4rpx;
  margin-left:10rpx;
}
.type-icon {
  width:40rpx;
  height:40rpx;
  position:relative;
  top:4rpx;
  margin-left:10rpx;
}
.fake-remark {
  padding:10rpx 10rpx 30rpx;
  border-bottom:1rpx solid #eee;
  color: grey;
}
.type-item {
  width: fit-content;
  margin: 0 auto;
  padding: 0 20rpx;
  border-radius:12rpx;
}