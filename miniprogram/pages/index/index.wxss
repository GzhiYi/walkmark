page {
  background: rgb(255, 232, 59);
}
.recommend {
  min-height:800rpx;
  background:rgb(255, 248, 198);
  margin-top:100rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  flex-direction:column;
  border-radius:18rpx;
  padding:30rpx;
  position:relative;
  margin-right:10rpx;
  margin-left:10rpx;
}
.mark-name {
  font-size:80rpx;
  font-weight:bold;
  text-align: center;
  margin-top:20rpx;

}
.remark {
  margin:40rpx 0 0;
  font-size:45rpx;
  width:100%;
}
.mark-address {
  margin-bottom:120rpx;
  text-align:left;
  width:100%;
  font-size:30rpx;
  margin-top:48rpx;
  color:#686868;
}
.desc {
  font-size:24rpx;
  color:#686868;
  position:absolute;
  bottom:20rpx;
  display:flex;
  justify-content:space-between;
  width:89%;
  padding:21rpx 0 0;
  align-items:center;
  border-top:2px solid #666;
}
.label {
  display:inline-block;
  border:1rpx solid rgb(255, 232, 59);
  border-radius:18rpx;
  padding:0 16rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border:1rpx solid #eee;
}
.switch {
  display:flex;
  justify-content:space-around;
  margin-top:20rpx;
}
.one-switch {
  display:flex;
  background:rgb(255, 248, 198);
  width:110rpx;
  justify-content:center;
  align-items:center;
  height:110rpx;
  border-radius:50%;
  box-shadow: 0px 0px 17px 0px rgb(212, 212, 212);
}
.switch-icon {
  width:60rpx;
  height:60rpx;
}
.pager {
  position:absolute;
  top:20rpx;
  right:20rpx;
  font-size:26rpx;
  color: #333;
}
.current-page {
  display:inline-block;
  width:47rpx;
  text-align:center;
  border-radius:50%;
  height:47rpx;
  text-decoration:underline;
}
/* 类别弹窗 */
.list-item {
  padding:13rpx;
  border-bottom:1rpx solid #eee;
  text-align:center;
  font-size:40rpx;

}
.list-item-cancel {
  padding:26rpx 0 13rpx;
  text-align:center;
  font-size:40rpx;
  color: #999;
}
.auth-info {
  display:flex;
  padding:40rpx 20rpx;
}
.icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.info-detail {
  width: 80%;
  font-size:41rpx;
}
.auth-userinfo-btn {
  width:92%;
  margin-bottom:44rpx;
  font-weight: bold;
}